{
  "name": "bsv-bap",
  "version": "0.1.6",
  "description": "BAP npm module",
  "repository": {
    "type": "git",
    "url": "https://github.com/BitcoinSchema/bap.git"
  },
  "license": "Open BSV",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.module.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.modern.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/*.js",
    "dist/*.js.map",
    "dist/*.d.ts",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "bun run clean && bun run build.ts",
    "clean": "rimraf ./dist",
    "test": "bun test",
    "check": "biome check .",
    "format": "biome format . --write",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "^1.2.2",
    "@types/node": "^22.13.4",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "schema-dts": "^1.1.2"
  },
  "peerDependencies": {
    "@bsv/sdk": "^1.3.18"
  }
}
